{
  "manifest_version": 3,
  "name": "Pinterest Insight",
  "version": "1.0.0",
  "description": "Pinterest Insight Overlay is a lightweight Chrome Extension that lets you instantly view detailed information about any Pinterest Pin â€” without leaving the page.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["utils/Helper.js","utils/PinterestHelper.js", "content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/*.js",
        "popup/libs/**",
        "popup/css/**",
        "popup/fonts/**"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
